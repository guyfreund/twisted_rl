<!---->

<mujoco model="Cable">
  <include file="scene.xml"/>

  <extension>
    <plugin plugin="mujoco.elasticity.cable"/>
  </extension>

  <statistic center="0 0 .3" extent="1"/>
  <visual>
    <global elevation="-30"/>
  </visual>

  <compiler autolimits="true"/>

  <size memory="2M"/>

  <worldbody>
    <body name="B10" pos="0 0.00 0.00">
      <freejoint/>
      <composite type="cable" curve="s" count="41 1 1" size="1" offset="-.3 0 0" initial="none"> <!--size="1" -->
        <plugin plugin="mujoco.elasticity.cable">
          <config key="twist" value="0"/> <!--"1e7"-->
          <config key="bend" value="4e7"/> <!--"4e6"-->
          <config key="vmax" value="1"/> <!--"0.05"-->
        </plugin>
        <joint kind="main" damping=".015"/>
        <geom type="capsule" friction="1.0" size=".005" rgba=".8 .2 .1 1" condim="1" mass="10"/>
      </composite>
    </body>
    <!--<body name="slider" pos=".7 0 .6">
      <joint type="slide" axis="1 0 0" damping=".1"/>
      <geom size=".01"/>
    </body>-->
    <body name="hand" mocap="true" pos="-0.4 -0.5 0.01">
        <geom type="capsule" size=".0001 .0001 .0001" rgba="0 .9 0 .5" contype="2"/>
    </body>
  </worldbody>
  <!--<equality>
    <connect name="right_boundary" body1="B_last" body2="slider" anchor=".025 0 0"/>
  </equality>-->
  <equality>
      <weld body1="hand" body2="B_last" solimp="0.9 0.95 0.001" solref="0.02 1"></weld>
  </equality>
  <!--<contact>
    <exclude body1="B_last" body2="slider"/>
  </contact>
  <actuator>
    <motor site="S_last" gear="0 0 0 1 0 0" ctrlrange="-.03 .03"/>
  </actuator>-->
</mujoco>