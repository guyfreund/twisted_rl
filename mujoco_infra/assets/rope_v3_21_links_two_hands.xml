<mujoco model="rope">

    <include file="scene_v2.xml"/>

    <option timestep="0.002" jacobian="dense"/>

    <size nconmax="100" njmax="300" nstack="50000"/>

    <worldbody>
        <camera name="cam0" pos="0 -0.6 1" euler="30 0 0"/>
        <body name="B10" pos="0 0.00 0.00">
            <freejoint/>
            <composite type="rope" count="21 1 1" spacing="0.04" offset="0 0 2">
                <joint kind="main" damping="0.005"/>
                <geom  type="capsule" size=".01 .015" rgba=".8 .2 .1 1"/>
            </composite>
        </body>
        <body name="hand" mocap="true" pos="-0.4 -0.5 0.01">
            <geom type="capsule" size=".0001 .0001 .0001" rgba="0 .9 0 .5" contype="2"/>
        </body>
        <body name="hand2" mocap="true" pos="-0.4 -0.5 0.01">
            <geom type="capsule" size=".0001 .0001 .0001" rgba="0 .9 0 .5" contype="2"/>
        </body>
    </worldbody>
    <equality>
        <weld body1="hand" body2="B10" solimp="0.9 0.95 0.001" solref="0.02 1"></weld>
        <weld body1="hand2" body2="B10" solimp="0.9 0.95 0.001" solref="0.02 1"></weld>
    </equality>
</mujoco>